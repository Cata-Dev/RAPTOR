{
  "name": "raptor",
  "version": "0.2.0",
  "description": "RAPTOR typescript/Node.js implementation",
  "main": "lib/main.js",
  "types": "lib/main.d.ts",
  "files": [
    "lib/**/*.js",
    "lib/**/*.d.ts"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/Cata-Dev/RAPTOR.git"
  },
  "scripts": {
    "build": "tsc",
    "prettier": "prettier \"**/*.ts\" --write",
    "type-check": "tsc -noEmit",
    "lint": "eslint ./src/ --fix",
    "full-lint": "pnpm run lint && pnpm run type-check",
    "test": "echo \"Error: no test specified\" && exit 1",
    "prepare": "pnpm run build"
  },
  "author": "Catatomik",
  "license": "MIT",
  "devDependencies": {
    "@tsconfig/node22": "^22.0.2",
    "@types/node": "^24",
    "eslint": "^9.29.0",
    "prettier": "^3.5.3",
    "typescript": "5.8.3",
    "typescript-eslint": "^8.34.1"
  }
}
