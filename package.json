{
  "name": "raptor",
  "version": "0.2.0",
  "description": "RAPTOR typescript/Node.js implementation",
  "main": "lib/index.js",
  "types": "lib/index.d.ts",
  "files": [
    "lib/**/*.js",
    "lib/**/*.d.ts"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/Cata-Dev/RAPTOR.git"
  },
  "scripts": {
    "build": "tsc",
    "format": "prettier '**/*.ts' --write",
    "format-check": "prettier '**/*.ts' --check",
    "type-check": "tsc -noEmit && tsc -noEmit -p tsconfig.jest.json",
    "lint": "eslint src test --fix",
    "full-lint": "pnpm run lint && pnpm run type-check",
    "test": "jest --coverage",
    "doc": "typedoc --out docs",
    "prepare": "pnpm run build"
  },
  "author": "Catatomik",
  "license": "MIT",
  "devDependencies": {
    "@eslint/js": "^9.34.0",
    "@jest/globals": "^30.1.2",
    "@tsconfig/node22": "^22.0.2",
    "@types/node": "^22",
    "eslint": "^9.34.0",
    "globals": "^16.3.0",
    "jest": "^30.1.3",
    "prettier": "^3.6.2",
    "ts-jest": "^29.4.1",
    "typedoc": "^0.28.12",
    "typescript": "5.9.2",
    "typescript-eslint": "^8.41.0"
  }
}
